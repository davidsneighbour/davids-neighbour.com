{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@assets/*": [
				"./src/assets/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@config/*": [
				"./src/config/*"
			],
			"@data/*": [
				"./src/data/*"
			],
			"@layouts/*": [
				"./src/layouts/*"
			],
			"@pages/*": [
				"./src/pages/*"
			],
			"@styles/*": [
				"./src/styles/*"
			],
			"@utils/*": [		
				"./src/utils/*"
			]
		}
	}
}
