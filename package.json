{
	"name": "@davidsneighbour/davids-neighbour.com",
	"description": "website setup and content for davids-neighbour.com",
	"version": "2025.2.0",
	"private": true,
	"dependencies": {
		"@astrojs/check": "0.9.6",
		"@astrojs/mdx": "4.3.12",
		"@ls-lint/ls-lint": "2.3.1",
		"@netlify/functions": "5.1.0",
		"netlify-cli": "23.11.1",
		"@tailwindcss/vite": "4.1.17",
		"astro": "5.16.2",
		"png-to-ico": "3.0.1",
		"resend": "6.5.2",
		"tailwindcss": "4.1.17"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-conventional": "20.0.0",
		"@davidsneighbour/release-config": "2025.3.8",
		"@humanwhocodes/crosspost": "1.0.2",
		"@humanwhocodes/social-changelog": "0.4.0",
		"@secretlint/secretlint-rule-anthropic": "11.2.5",
		"@secretlint/secretlint-rule-database-connection-string": "11.2.5",
		"@secretlint/secretlint-rule-no-dotenv": "11.2.5",
		"@secretlint/secretlint-rule-no-homedir": "11.2.5",
		"@secretlint/secretlint-rule-no-k8s-kind-secret": "11.2.5",
		"@secretlint/secretlint-rule-openai": "11.2.5",
		"@secretlint/secretlint-rule-pattern": "11.2.5",
		"@secretlint/secretlint-rule-preset-recommend": "11.2.5",
		"@secretlint/secretlint-rule-secp256k1-privatekey": "11.2.5",
		"@total-typescript/ts-reset": "0.6.1",
		"@types/node": "24.10.1",
		"browserslist": "4.28.0",
		"cz-git": "1.12.0",
		"fixpack": "4.0.0",
		"glob": "13.0.0",
		"npm-run-all": "4.1.5",
		"secretlint": "11.2.5",
		"tsx": "4.20.6",
		"typescript": "5.9.3",
		"wireit": "0.14.12"
	},
	"scripts": {
		"astro:build": "astro build --verbose",
		"astro:check": "astro check --verbose",
		"astro:dev": "astro dev --verbose",
		"astro:preview": "astro preview --verbose",
		"biome:check": "biome check",
		"biome:format": "biome format",
		"biome:lint": "biome check --fix",
		"biome:postinstall": "biome migrate --write",
		"biome:watch": "biome check --watch",
		"build:favicons": "node src/assets/favicon/regenerate.ts",
		"clean": "wireit",
		"clean:full": "wireit",
		"hooks:update": "simple-git-hooks",
		"lint:filenames": "ls-lint",
		"lint:hook:commit": "lint-staged",
		"lint:secretlint": "secretlint --secretlintrc src/config/secretlint/.secretlintrc.json --secretlintignore src/config/secretlint/.secretlintignore",
		"package:compile": "wireit",
		"package:compile:fixpack": "wireit",
		"package:compile:install": "wireit",
		"package:update": "wireit",
		"postinstall": "run-p postinstall:*",
		"postinstall:favicons": "node ./src/assets/favicon/regenerate.ts",
		"prepare:sharedconfig": "npx tsx src/config/shared-config-create.ts",
		"release": "wireit",
		"release:clean": "wireit",
		"update": "wireit"
	},
	"wireit": {
		"release": {
			"command": "commit-and-tag-version --sign -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" -- --no-verify && ./src/scripts/postrelease"
		},
		"release:clean": {
			"command": "rm changes.md release.json"
		},
		"package:compile": {
			"command": "npm run package:compile:install",
			"dependencies": [
				"package:compile:run"
			],
			"files": [
				"./src/packages/**/*.jsonc"
			]
		},
		"package:compile:fixpack": {
			"command": "fixpack --config src/config/ci/.fixpackrc.json || true && fixpack --config src/config/ci/.fixpackrc.json || true"
		},
		"package:compile:install": {
			"command": "npm install",
			"dependencies": [
				"package:compile:fixpack"
			]
		},
		"package:compile:run": {
			"command": "node ./src/packages/generate-package.ts"
		},
		"package:update": {
			"command": "node ./src/packages/update-package.ts"
		},
		"update": {
			"dependencies": [
				"update:git-hooks"
			]
		},
		"update:git-hooks": {
			"command": "npx simple-git-hooks",
			"dependencies": [
				"update:post"
			]
		},
		"update:post": {
			"command": "fixpack && browserslist --update-db",
			"dependencies": [
				"update:pre:npm",
				"update:pre:submodules"
			]
		},
		"update:pre:npm": {
			"command": "npm-check-updates -u --target minor"
		},
		"update:pre:submodules": {
			"command": "git submodule update --recursive --remote"
		},
		"clean": {
			"dependencies": [
				"clean:astro"
			]
		},
		"clean:astro": {
			"command": "rm -rf .astro dist node_modules/.astro"
		},
		"clean:full": {
			"command": "rm -rf node_modules package-lock.json .wireit",
			"dependencies": [
				"clean:astro",
				"clean:netlify"
			]
		}
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version",
			"last 1 ie version"
		],
		"production": [
			"last 1 version",
			"Chrome >= 112",
			"Firefox >= 121",
			"iOS >= 16",
			"Safari >= 16.4",
			"Edge >= 112",
			"not ie > 0",
			"not ie_mob > 0",
			"not dead",
			"not op_mini all",
			"not op_mob > 0",
			"not opera > 0",
			"not ucandroid > 0",
			"not and_uc > 0",
			"not and_qq > 0",
			"not kaios 2.5"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"type": "module"
}
