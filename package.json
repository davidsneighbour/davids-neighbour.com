{
  "name": "davids-neighbour-com",
  "description": "Website and content for davids-neighbour.com",
  "version": "2020.0.19",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.7",
    "@dnb-org/browserslist-config": "3.0.13",
    "@dnb-org/commitlint-config": "3.0.13",
    "@dnb-org/eslint-config": "3.0.13",
    "@dnb-org/remark-config": "3.0.13",
    "@dnb-org/standard-version-config": "3.0.13",
    "@dnb-org/stylelint-config": "3.0.13",
    "@dnb-org/textlint-config": "3.0.13",
    "@popperjs/core": "2.9.2",
    "@rogerpence/edit-package-json": "1.1.1",
    "atomic-algolia": "0.3.19",
    "autoprefixer": "10.2.6",
    "cssnano": "5.0.6",
    "postcss": "8.3.5",
    "postcss-cli": "8.3.1"
  },
  "homepage": "https://davids-neighbour.com",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/davidsneighbour/davids-neighbour.com.git"
  },
  "scripts": {
    "build": "run-s build:critical && build:hugo",
    "build:critical": "./bin/build-critical-css.sh",
    "build:highlights": "hugo gen chromastyles --style=monokailight > assets/scss/plugins/_highlight.scss",
    "clean": "npm-run-all -p clean:*",
    "clean:cypress": "rimraf tests/cypress/screenshots tests/cypress/videos",
    "clean:hugo": "rimraf hugo.log hugo_stats.json resources",
    "clean:npm": "rimraf node_modules package-lock.json",
    "hugo:build": "hugo --gc --minify",
    "hugo:serve": "rimraf hugo.log && hugo server --bind 192.168.1.201 --baseURL http://192.168.1.201 --disableFastRender --i18n-warnings --navigateToChanged  --templateMetrics --templateMetricsHints --verbose --verboseLog --path-warnings --buildDrafts --buildExpired --buildFuture --watch --enableGitInfo --forceSyncStatic --log true --logFile hugo.log -v",
    "lint:fix": "run-p lint:scss:fix lint:textlint:fix",
    "lint:remark": "remark",
    "lint:scss": "stylelint assets/scss/",
    "lint:scss2": "stylelint",
    "lint:scss:fix": "stylelint assets/scss/ --fix",
    "lint:textlint": "textlint",
    "lint:textlint:fix": "textlint --fix",
    "release": "standard-version --release-as patch -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release-major": "standard-version --release-as major -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release-next": "standard-version --release-as minor -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "test": "run-p test:server test:cypress",
    "test:cypress": "cypress open",
    "test:server": "hugo server --port=8888 --disableFastRender --i18n-warnings --navigateToChanged  --templateMetrics --templateMetricsHints --verbose --verboseLog --path-warnings --buildDrafts --buildExpired --buildFuture --watch --enableGitInfo --forceSyncStatic --log true --logFile hugo.log -v",
    "update": "npm-check-updates -u && npm install"


  },
  "url": "https://davids-neighbour.com"
}
